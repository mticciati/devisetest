<h1>My Jobs - <%= @current_user.role %></h1>

<p><%= @current_user.email %>
<table class="table table-striped table-hover">
	<% if @current_user.role == 'applicant' %>
		<thead>
			<tr>
				<th>Job</th>
				<th>Qualified</th>
				<th>Posted By</th>
				<th>Applied At</th>
				<th>Status</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% @job_applications.each do |j| %>
				<tr>
					<td>title</td>
					<td><%= j.qualified == 0 ? "Required" : "Not Required" %></td>
					<td>email</td>
					<td><%= j.created_at %></td>
					<td>Pending...</td>
					<td>

						<% if @current_user.role == 'admin' || @current_user.role == 'manager' %> 
							<%= link_to "Edit", "/jobs/#{j.id}" %>
						<% else %>
							<%= link_to "Destroy", "/my_jobs/#{j.id}", method: :delete, data: { confirm: 'Are you sure?' } %>
						<% end %>

					</td>
				</tr>
			<% end %>
		</tbody>

	<!-- admin or manager -->
	<% else %>
		<thead>
			<tr>
				<th>Job</th>
				<th>Qualifications</th>
				<th>Applicants</th>
				<th>Posted At</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% @jobs.each do |j| %>
				<tr>
					<td><%= j.job_title %></td>
					<td><%= j.qualified == 1 ? "Required" : "Not Required" %></td>
					<td><%= j.applicants %></td>
					<td><%= j.created_at %></td>
					<td><%= link_to "Edit", edit_job_path(j) %></td>
				</tr>
			<% end %>
		</tbody>
	<% end %>
</table>