<h1>Edit Job</h1>

<%= form_for(@job) do |f| %>
	<div class="form-group">
		<%= f.label :job_title %>
		<%= f.text_field :job_title, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :require_qualification %>
		<%= f.radio_button :qualified, 1, class: "form-control" %>
		<%= f.label :no_require_qualification %>
		<%= f.radio_button :qualified, 0, class: "form-control" %>
	</div>
	<%= f.submit %>
<% end %>